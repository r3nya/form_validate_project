extends layout
block content
    h2= title

    .alert-status

    .row
        form.form-horizontal.valid(action='/', role='form', method='post')
            input(type='hidden', name='_csrf', value='#{csrf}')

            .form-group
                label.col-md-4.control-label(for='name') Имя
                .col-md-4
                    input#name.form-control.input-md(name='name', type='text', placeholder='Василий Пупкин',
                        required, data-parsley-minlength="2", data-parsley-errors-messages-disabled)

            .form-group
                label.col-md-4.control-label(for='email') Email
                .col-md-4
                    input#email.form-control.input-md(name='email', type='text', placeholder='vasya@pupkin.com',
                        required, data-parsley-type="email", data-parsley-errors-messages-disabled)

            .form-group
                label.col-md-4.control-label(for='body') Сообщение
                .col-md-4
                    textarea#body.form-control(name='body', placeholder='Привет!', required, data-parsley-minlength="6",
                        data-parsley-errors-messages-disabled)

            .form-group
                .col-sm-offset-4.col-sm-4
                    button#submit(type='submit', class='btn btn-default') Отправить
